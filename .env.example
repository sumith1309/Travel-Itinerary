# ============================================================
# TRAILS AND MILES — Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# ----------------------------------------------------------
# DATABASE (Required)
# Supabase PostgreSQL — https://supabase.com
# Get connection strings: Project Settings → Database → Connection String
# ----------------------------------------------------------
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# ----------------------------------------------------------
# NEXTAUTH (Required)
# Generate secret: openssl rand -base64 32
# ----------------------------------------------------------
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# ----------------------------------------------------------
# GOOGLE OAUTH (Optional — for Google login)
# https://console.cloud.google.com → OAuth 2.0 Client IDs
# ----------------------------------------------------------
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ----------------------------------------------------------
# OPENAI (Required for AI features)
# https://platform.openai.com
# ----------------------------------------------------------
OPENAI_API_KEY="sk-proj-..."
AI_MODEL="o3"
AI_MAX_TOKENS="4096"
AI_MAX_TOKENS_ITINERARY="8192"

# ----------------------------------------------------------
# UPSTASH REDIS (Optional — for caching)
# https://console.upstash.com
# App works without Redis — cache miss = direct DB query
# ----------------------------------------------------------
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# ----------------------------------------------------------
# MAPBOX (Optional — for maps in Phase 2+)
# https://account.mapbox.com
# ----------------------------------------------------------
MAPBOX_ACCESS_TOKEN=""

# ----------------------------------------------------------
# CLOUDINARY (Optional — for image CDN in Phase 2+)
# https://cloudinary.com/console
# ----------------------------------------------------------
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# ----------------------------------------------------------
# APP CONFIG
# ----------------------------------------------------------
NODE_ENV="development"
APP_URL="http://localhost:3000"
